{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build",
        "${workspaceFolder}/build"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "detail": "Build project for ARM64 architecture"
    },
    {
      "label": "Build with profiling",
      "type": "shell",
      "command": "gcc -pg -o triangles ${workspaceFolder}/tests/hw3d/triangles.cc",
      "group": {
          "kind": "build",
          "isDefault": true
      }
    },
    {
      "label": "Run profiler",
      "type": "shell",
      "command": "./run_triangles && gprof run_triangles gmon.out > profile_report.txt",
      "group": "test"
    }
  ]
}
  